<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobileclient" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_sapphire</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cadet_blue</item>
        <item name="colorSecondaryVariant">@color/ocean_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Buttons -->
        <item name="materialButtonStyle">@style/Theme.Mobileclient.Button</item>
        <item name="imageButtonStyle">@style/Theme.Mobileclient.Button</item>
    </style>

    <style name="Theme.Mobileclient.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Mobileclient.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.Mobileclient.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- ButtonStyle -->
    <style name="Theme.Mobileclient.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/custom_blue</item>
    </style>
</resources>